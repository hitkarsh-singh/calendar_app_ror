<h1>New Event</h1>
<%= form_with model: @event, local: true, class: 'event-form' do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time %>
  </div>

  <!-- Add fields for end_time and description -->

  <div>
    <%= form.submit %>
  </div>

  <div id="event-new-container">
  <script type="text/template" id="event-new-template">
    <h1>New Event</h1>
    <form class="new-event-form">
      <!-- Add input fields for title, start_time, end_time, and description -->
      <button type="submit">Create Event</button>
    </form>
  </script>
</div>
<% end %>








